
.double { border-top:1px solid #ccc; padding:15px 0; margin:0;  list-style:none; list-style-type:none; width:100%; }
.double li { margin:0%; width:33%; max-width:33.333%; background-color:transparent; border:0px solid #c2c2c2; border:0 none; float:left; padding:1%; list-style:none; list-style-type:none; display:block; height:45px; overflow:hidden;  }
.double li:hover { background-color:#ffffff; }

.double li a, .double li a:link, .double li a:visited { color:#6F7072; display:block; opacity:1.0; font-size:15px; line-height:20px; font-weight:400; }
.double li a:active, .double li a:hover { color:#4C4C4E;  opacity:0.8;	-webkit-transition:opacity .3s ease-in-out;	-moz-transition-duration:.3s;	-o-transition:opacity .3s ease-in-out; text-shadow:none; }
.double li:hover a { color:#5F883B !important; text-shadow:none; }


.double > li label { display:block; width:25%; float:left; padding-top:.2em; }
.double > li > li label { line-height:100%; padding-top:0; }
.double > li > li label input { line-height:100%; vertical-align:middle; margin-top:-0.1em;}

.inputs > h4 { padding-top: 20px;}

.choices-group { width: 40%; float: right !important;}
.choices-group li {  float:left; width: 40px;}

fieldset.choices legend.label label { width: 50%;}

